# ================================================================================
# ARBITRAGE SETTINGS CONFIGURATION - PHASE 4.5 ENTERPRISE
# ================================================================================
# Compatible con arbitrage_settings.json - mantiene sincronizaci√≥n
# Version: 2.0 - Estructura completa validada
# ================================================================================

[trading]
mode = "simulation"
force_real_transactions = false
max_trade_sol = 0.08
min_profit_threshold_sol = 0.001
min_confidence_threshold = 0.75
max_concurrent_trades = 3
trade_timeout_seconds = 30
min_trade_size_sol = 0.1
max_trade_size_sol = 100.0
max_slippage_bps = 150
military_min_profit_bps = 20
base_profit_percentage = 0.015
max_profit_percentage = 0.025
default_trade_amount_usd = 1000.0
estimated_gas_cost_usd = 5.0
estimated_execution_time_ms = 3000

[wallet]
keypair_file = "./keypair.json"
backup_keypair_file = "~/.config/solana/id.json"
use_env_private_key = false
env_key_name = "SOLANA_PRIVATE_KEY"

[rpc]
primary_url = "https://api.devnet.solana.com"
backup_urls = ["https://api.devnet.solana.com", "https://rpc.ankr.com/solana_devnet"]
timeout_seconds = 30
retry_attempts = 3

[apis.dexscreener]
enabled = true
timeout_seconds = 10
max_retries = 2

[apis.jupiter]
enabled = true
timeout_seconds = 5
max_retries = 3
quote_api_url = "https://quote-api.jup.ag/v6"
price_api_url = "https://api.jup.ag/price/v2"

[apis.coinbase]
enabled = true
timeout_seconds = 8
max_retries = 2

[apis.birdeye]
enabled = false
api_key = ""
timeout_seconds = 10

[anti_circular]
enabled = true
prevent_same_dex_arbitrage = true
max_same_token_repeats = 1
circular_detection_enabled = true

[ml_analysis]
enabled = true
min_score_threshold = 0.2
pattern_recognition_enabled = true
adaptive_parameters_enabled = true
ml_confidence_threshold = 0.6

[performance]
max_concurrent_discoveries = 10
cache_ttl_seconds = 30
parallel_api_calls = true
latency_target_ms = 500
discovery_cycle_delay_seconds = 5
cache_enabled = true
batch_processing_enabled = true

[triangular_arbitrage]
enabled = true
max_hops = 3
min_net_profit_bps = 20
circular_detection_enabled = true
max_same_token_repeats = 1

[mev_protection]
enabled = true
jito_rpc_url = "https://mainnet.block-engine.jito.wtf"
jito_tip_lamports = 1500
sandwich_detection = true

[logging]
level = "info"
file_enabled = true
file_path = "./arbitrage.log"
console_enabled = true

[risk_management]
max_slippage_bps = 150
max_daily_loss_sol = 1.0
stop_loss_enabled = true
emergency_stop_enabled = true
min_liquidity_usd = 1000.0

[dashboard]
refresh_rate_seconds = 5
show_detailed_metrics = true
show_api_status = true
clear_screen_enabled = true

[security]
require_wallet_confirmation = true
max_transaction_retries = 3
transaction_timeout_seconds = 30
sandwich_detection = true

